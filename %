#!/bin/bash

e="$(printf "\e[")"

_Mi="s/Mi\\|Gi/${e}37m&${e}0m/g"

_00="s/\\<\\([01]\\|\\<\\)[0-9]\\s*%/${e}32m&${e}0m/g"
_50="s/[56][0-9]\\s*%/${e}33m&${e}0m/g"
_70="s/[78][0-9]\\s*%/${e}1;33m&${e}0m/g"
_88="s/\\(8[89]\\|9[0-4]\\)\\s*%/${e}1;31m&${e}0m/g"
_95="s/\\<\\(9[5-9]\\|1[0-9]\\{2\\}\\)\\s*%/${e}1;41;37m&${e}0m/g"

exec sed -e "$_Mi" -e "$_00" -e "$_50" -e "$_70" -e "$_88" -e "$_95"
