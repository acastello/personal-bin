#!/bin/sh

esc=$(printf '\033')

sed -e "s_\([^.a-zA-Z0-9]\)\([0-9]\{1\}\(\.[0-9]\+\)\? ms\)_\1${esc}[32m\2${esc}[0m_" \
    -e "s_\([^.a-zA-Z0-9]\)\([0-9]\{2\}\(\.[0-9]\+\)\? ms\)_\1${esc}[33m\2${esc}[0m_" \
    -e "s_\([^.a-zA-Z0-9]\)\([0-9]\{3\}\(\.[0-9]\+\)\? ms\)_\1${esc}[31m\2${esc}[0m_" \
    -e "s_\([^.a-zA-Z0-9]\)\([0-9]\{4,\}\(\.[0-9]\+\)\? ms\)_\1${esc}[1;31m\2${esc}[0m_" -u
